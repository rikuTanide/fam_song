{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "strict": true,
    "experimentalDecorators": true,
    "lib": [
      "es2018",
      "dom",
      "scripthost",
      "dom.iterable"
    ],
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
      "src/types/**/*",
      "src/mapping/*",
      "src/update/*",
      "values.ts"
  ],
  "include" :[ "./src/**/*"]
}