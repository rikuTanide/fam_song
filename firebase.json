{
  "database": {
    "rules": "database.rules.json"
  },
  "functions": {
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/mypage/**",
        "destination": "/mypage/index.html"
      },
      {
        "source": "/",
        "function": "httpHandle"
      },
      {
        "source": "/artists/*",
        "function": "httpHandle"
      },
      {
        "source": "/artists/*/songs/*",
        "function": "httpHandle"
      },
      {
        "source": "/users/*",
        "function": "httpHandle"
      },
      {
        "source": "/votes/users/*/artists/*",
        "function": "httpHandle"
      }
    ]
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "database": {
      "port": 9000
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true
    }
  }
}
